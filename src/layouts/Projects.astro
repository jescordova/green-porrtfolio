<style>
    .projects{
        /* background: var(--color-3); */
        display: flex;
        flex-direction: column;
        justify-content: center;
    }
    .header-projects{
        margin-bottom: 2rem;
    }
    .content-projects{
        /* display: flex;
        flex-direction: column;
        gap: 1rem; */
        display: grid;
        grid-template-columns: repeat(1, 1fr);
        align-items: center;
        gap: 1rem;
    }
    article{
        position: relative;
        border: 5px double var(--color-default);
        border-radius: 0.5rem;
        height: 36vh;
        text-align: center;
        display: flex;
        overflow: hidden;
        .picture{
            img{
                flex: 1;
                /* position: absolute;
                top: 0;
                left: 0; */
                width: 100%;
                height: 100%;
                border-radius: 0.5rem;
                object-fit: cover;
                opacity: 0.7;
                transition: .5s ease;
            }
            img:hover{
                transform: scale(1.2);
            }
        }
        .info{
            position: absolute;
            bottom: 0;
            left: 0; 
            width: 100%;
            height: 100%;
            background: linear-gradient(rgba(0, 0, 0,0.1), var(--bg-color));
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            /* padding: 0 4rem; */
            transform: translateY(100%);
            transition: .5s ease;
            /* top: 0; */
            /* z-index: 1; */
            margin: 1.5rem 0;
            margin-bottom: 0;
            h3{
                text-transform: uppercase;
                background: rgba(255, 255, 255, 0.2);
                border-top: 1px solid var(--color-07);
                border-bottom: 1px solid var(--color-07);
                padding: 0.5rem 0;
                font-weight: 500;
                text-shadow: 0 0 3px #000;
                width: 100%;
            }
            p{
                margin: 1rem;
                margin-top: 1.5rem;
                font-weight: 300;
            }
            i{
                background: var(--color-default);
                border: 2px solid var(--color-90);
                border-radius: 100%;
                font-size: 1.7rem;
                padding: 1rem;
                color: var(--color-90);
            }
            i:hover{
                background: transparent;
                border: 2px solid var(--color-09);
                color: var(--color-09);
                box-shadow: var(--box-shadow);
            }
        }
    }
    article:hover .info{
        box-shadow: var(--box-shadow);
        transform: translateY(0);
    }
    /* Medium devices (tablets, 768px and up) */
    @media (min-width: 768px) {
        .content-projects{
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            article{
                flex: 1 1 350px;
            }
        }
    }
    /* Large devices (desktops, 992px and up) */
    @media (min-width: 992px) {
        .content-projects{
            display: grid;
            grid-template-columns: repeat(3, 1fr);
        }
    }
</style>