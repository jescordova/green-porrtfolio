<style>
*{
    color: inherit;
}
.res-web{
    display: flex;
    flex-direction: column;
    gap: 2rem;
}
.article{
    flex: 1;
    background: var(--color-09);
    padding: 0.5rem;
    display: flex;
    flex-direction: column;
}
.header{
    background: #039862;
    padding: 60px;
    text-align: center;
        h1{
            font-size: 2rem;
        }
        p{
            font-weight: 300;
            margin: 1rem;
        }
}
.nav{
    color: #fff;
    background: #333333;
    a{
        padding: 1rem;
        display: flex;
        flex-direction: column;
        align-items: center; 
        text-transform: capitalize;
        transition: .3s ease-in-out;
    }
    a:hover{
        background: #d5d4d4;
        color: #000;
    }
}
.main{
    color: #000;
    display: flex;
    flex-direction: column;
}
.side{
    flex: 1;
    background-color: #f1f1f1;
    padding: 20px;
    .content{
        h2{
            margin: 1rem 0;
            font-size: 1.5rem;
            font-weight: 700;
        }
        h3{
            font-weight: 700;
            font-size: .9rem;
        }
    }
    .content:last-child{
        h2{
            font-size: 1.2rem;
        }
        img{
            margin: 0;
        }
    }
}
.section{
    flex: 1;
    background-color: #fff;
    padding: 20px;
    display: flex;
    flex-direction: column;
    gap: 3rem;
    .content{
        h2{
            margin: 1rem 0;
            font-size: 1.6rem;
            font-weight: 700;
            text-transform: uppercase;
        }
        h3{
            font-weight: 700;
            font-size: .9rem;
        }
        p{
            margin: 1rem;
        }
    }
}
.footer{
    background: #ddd;
    color: #000;
    text-align: center;
    p{
        padding: 40px;
        font-weight: 600;
        text-transform: capitalize;
        font-size: 1.5rem;
    }
}
img{
   width: 100%;
   margin: 1rem 0;
   border: 1px solid #ccc;
   border-radius: 0.5rem;
   padding: 0.2rem;
}
@media (min-width: 800px){
    .nav{
        display: flex;
        a{
            display: inherit;
        }
    }
    .main{
        flex-direction: row;
        .aside{
            flex: 1;
        }
        .section{
            flex: 3;
        }

    }
}
