---
const {platform, username} = Astro.props;
---

<div class="btn">
    <a href={`https://www.${platform}.com/${username}`}><i class=`bx bxl-${platform}`></i></a>
</div>

<style>
    .btn{
        a{
            border: 3px solid var(--color-default);
            border-radius: 100%;
            padding: 0.3rem;
            display: flex;
            justify-content: center;
            align-items: center;
            transition: .3s ease-in-out;
            i{
                color: var(--color-default);
                font-size: 2rem;
            }
        }
        a:hover{
            border: 4px solid var(--color-70);
            background-color: var(--color-default);
            color: var(--color-90);
            transform: translateY(-6px);
            box-shadow: 0 0 30px var(--color-default);
            i{
                color: var(--color-70);
            }
        }
    }
</style>