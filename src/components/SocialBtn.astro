---
const {platform, username} = Astro.props;
---

<div class="btn">
    <a href={`https://www.${platform}.com/${username}`}><i class=`bx bxl-${platform}`></i></a>
</div>

<style>
    .btn{
        a{
            border: 3px solid var(--active-1);
            border-radius: 100%;
            color: var(--active-1);
            padding: 0.3rem;
            display: flex;
            justify-content: center;
            align-items: center;
            transition: .3s ease-in-out;
            i{
                font-size: 2rem;
            }
        }
        a:hover{
            background-color: var(--active-1);
            color: var(--color-00);
            transform: translateY(-4px);
            box-shadow: 0 0 20px var(--active-1);
        }
    }
</style>