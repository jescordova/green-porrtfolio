---
const {url, name, icon} = Astro.props;
---

<div class="btn">
    <a href={url}>{name} <i class=`bx bxs-${icon}`></i></a>
</div>

<style>
    .btn{
        display: flex;
        a{
            background-color: var(--active-2);
            color: var(--color-50);
            padding: 0.7rem 1.5rem;
            border: 2px solid var(--color-00);
            border-radius: 4rem;
            text-transform: capitalize;
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 0.5rem;
            transition: .3s ease-in-out;
        }
        a:hover{
            background-color: var(--color-50);
            color: var(--active-1);
            border: 2px solid var(--active-1);
        }
    }
</style>